# This tmux statusbar config was created by tmuxline.vim
# on Tue, 27 Aug 2019

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#e0e0e0,bg=#373b41"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#198844"
set -g status-style "none,bg=#282a2e"
set -g message-style "fg=#e0e0e0,bg=#373b41"
set -g pane-border-style "fg=#373b41"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none,fg=#198844,bg=#282a2e"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#F96A38,bg=#282a2e"
set -g status-left "#[fg=#282a2e,bg=#198844] #S #[fg=#198844,bg=#373b41,nobold,nounderscore,noitalics]#[fg=#e0e0e0,bg=#373b41] #F #[fg=#373b41,bg=#282a2e,nobold,nounderscore,noitalics]#[fg=#F96A38,bg=#282a2e] #W #[fg=#282a2e,bg=#282a2e,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#282a2e,bg=#282a2e,nobold,nounderscore,noitalics]#[fg=#F96A38,bg=#282a2e] %a #[fg=#373b41,bg=#282a2e,nobold,nounderscore,noitalics]#[fg=#e0e0e0,bg=#373b41] %b %d  %R #[fg=#198844,bg=#373b41,nobold,nounderscore,noitalics]#[fg=#282a2e,bg=#198844] #H "
setw -g window-status-format "#[fg=#282a2e,bg=#282a2e,nobold,nounderscore,noitalics]#[default] #I  #W #[fg=#282a2e,bg=#282a2e,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=#282a2e,bg=#373b41,nobold,nounderscore,noitalics]#[fg=#e0e0e0,bg=#373b41] #I  #W #[fg=#373b41,bg=#282a2e,nobold,nounderscore,noitalics]"
