# This tmux statusbar config was created by tmuxline.vim
# on Tue, 27 Aug 2019

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#D3D4D5,bg=#4B5356"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#6FEE91"
set -g status-style "none,bg=#33393B"
set -g message-style "fg=#D3D4D5,bg=#4B5356"
set -g pane-border-style "fg=#4B5356"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none,fg=#6FEE91,bg=#33393B"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#FFFF60,bg=#33393B"
set -g status-left "#[fg=#33393B,bg=#6FEE91] #S #[fg=#6FEE91,bg=#4B5356,nobold,nounderscore,noitalics]#[fg=#D3D4D5,bg=#4B5356] #F #[fg=#4B5356,bg=#33393B,nobold,nounderscore,noitalics]#[fg=#FFFF60,bg=#33393B] #W #[fg=#33393B,bg=#33393B,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#33393B,bg=#33393B,nobold,nounderscore,noitalics]#[fg=#FFFF60,bg=#33393B] %a #[fg=#4B5356,bg=#33393B,nobold,nounderscore,noitalics]#[fg=#D3D4D5,bg=#4B5356] %b %d  %R #[fg=#6FEE91,bg=#4B5356,nobold,nounderscore,noitalics]#[fg=#33393B,bg=#6FEE91] #H "
setw -g window-status-format "#[fg=#33393B,bg=#33393B,nobold,nounderscore,noitalics]#[default] #I  #W #[fg=#33393B,bg=#33393B,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=#33393B,bg=#4B5356,nobold,nounderscore,noitalics]#[fg=#D3D4D5,bg=#4B5356] #I  #W #[fg=#4B5356,bg=#33393B,nobold,nounderscore,noitalics]"
